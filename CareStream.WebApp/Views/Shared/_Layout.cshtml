<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Carestream</title>

    <!-- Bootstrap code & custom styles-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/style.css" rel="stylesheet">
    <link href="~/css/offset-wizard.css" rel="stylesheet" />
    <link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/e508532408.js" crossorigin="anonymous"></script>

    <!--scripts-->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>

</head>

<body>

    @{
        if (User.Identity.IsAuthenticated)
        {
            <div class="fullScreenLoader">
                <div class="spinner"></div>
            </div>

            <input type="hidden" id="Controller" />
            <input type="hidden" id="Action" />


            <nav class="topbar navbar fixed-top navbar-expand-sm border-bottom">
                <div class="sidebar-heading col-sm-2 text-center">
                    <img src="~/img/logo.gif" alt="Carestream" />
                </div>
                <partial name="_LoginPartial" />
                <div id="user-info" style="color:@TempData["UserMsgColor"];"><span class="user-msg-info">@TempData["UserMessage"]</span></div>
                <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                    <li class="nav-item dropdown">
                        <a class="text-decoration-none dropdown-toggle text-dark row" href="#" id="navbarDropdown" role="button"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <div class="text-right col">
                                <strong>John Doe</strong><br />
                                <small>Carestream Admin</small>
                            </div>
                            <div class="text-right col" style="width:35px;height:35px;">
                                <i class="fa fa-user rounded-circle" style="padding:10px;border:2px solid #ccc;"></i>
                            </div>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right user-menu border shadow-sm"
                             aria-labelledby="navbarDropdown">
                            <div class="row">
                                <div class="text-truncate col">Carestream</div>
                                <div class="text-truncate text-right col">
                                    <a href="" class="text-decoration-none text-dark">Signout</a>
                                </div>
                            </div>
                            <div class="row mt-3 pb-3">
                                <div class="text-truncate col-3">
                                    <i class="fa fa-user rounded-circle fa-3x" style="padding:10px;border:2px solid #ccc;"></i>
                                </div>
                                <div class="text-truncate col-9">
                                    <h6>
                                        <strong>John Doe</strong><br />
                                        <small class="text-truncate">john.doe@carestream.com</small>
                                    </h6>
                                    <a asp-controller="Accounts" asp-action="Index" class="text-decoration-none">View Account</a>
                                </div>
                                <div class="text-truncate col-9">
                                    <div class="text-truncate col-9">
                                        <a class="nav-link text-dark" asp-area="AzureADB2C" asp-controller="Account" asp-action="SignOut">Sign out</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </li>
                </ul>
            </nav>
            <div class="d-flex mt-7 shadow-sm border-bottom pb-1 pt-1">
                <div class="col">
                    <a class="text-dark pl-3 pr-3" href="#" id="menu-toggle"><i class="fa fa-bars"></i></a>
                    <a class="text-dark pr-2 text-decoration-none" asp-controller="Users" asp-action="UsersList" id="menu-toggle" onclick="blockUi();">Home</a><i class="fa fa-caret-right pl-1 pr-1"></i>
                    <a class="text-dark pr-2 text-decoration-none" href="#" id="menu-toggle">Users</a>
                </div>
                <div class="col text-right">
                    <a class="pr-2 text-decoration-none help-icon" href="#" id="menu-toggle">
                        <i class="fa fa-question-circle"></i>
                    </a>
                </div>
            </div>

            <div class="d-flex" id="wrapper">
                <div class="right-shadow border-right bg-light" id="sidebar-wrapper">
                    <div class="list-group list-group-flush mt-1">

                        <div class="panel-group" id="accordion">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Users" asp-action="UsersList" onclick="blockUi();"><i class="fa fa-home"></i>Home</a>
                                </div>
                                <div id="collapseOne" class="panel-collapse collapse in">
                                    <div class="panel-body">

                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo"
                                       class="list-group-item list-group-item-action">
                                        <i class="fa fa-user"></i> Users
                                    </a>
                                </div>
                                <div id="collapseTwo" class="panel-collapse collapse">
                                    <div class="panel-body bg-white pl-4">
                                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Users" asp-action="UsersList" onclick="blockUi();">All Users</a>
                                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Users" asp-action="Create" onclick="blockUi();">Create User</a>
                                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Users" asp-action="DeletedUsers" onclick="blockUi();">Deleted Users</a>
                                        <a href="#" class="list-group-item list-group-item-action">User Attributes</a>
                                        <a href="#" class="list-group-item list-group-item-action">Bulk Operations</a>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree"
                                       class="list-group-item list-group-item-action">
                                        <i class="fa fa-users"></i> Groups
                                    </a>
                                </div>
                                <div id="collapseThree" class="panel-collapse collapse">
                                    <div class="panel-body bg-white pl-4">
                                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Group" asp-action="Index" onclick="blockUi();">All Groups</a>
                                        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Group" asp-action="Create" onclick="blockUi();">Create Group</a>
                                        <a href="#" class="list-group-item list-group-item-action">Deleted Groups</a>
                                        <a href="#" class="list-group-item list-group-item-action">Bulk Operations</a>
                                    </div>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseFour"
                                       class="list-group-item list-group-item-action">
                                        <i class="fa fa-lock"></i> Role &amp; Permissions
                                    </a>
                                </div>
                                <div id="collapseFour" class="panel-collapse collapse">
                                    <div class="panel-body">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="page-content-wrapper">
                    @RenderBody()
                    <div class="modal" tabindex="-1" role="dialog" id="confirmDialog" style="display:none">

                        <div class="modal-dialog" role="document">

                            <div class="modal-content">

                                <div class="modal-header">

                                    <h5 class="modal-title">Confirm Delete</h5>

                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="confirmDelete(false)">

                                        <span aria-hidden="true">&times;</span>

                                    </button>

                                </div>

                                <div class="modal-body">

                                    <p>Are you sure you want to delete the record?.</p>

                                </div>

                                <div class="modal-footer">

                                    <button type="button" class="btn btn-light" data-dismiss="modal" onclick="confirmDelete(false)">Cancel</button>

                                    <button type="button" class="btn btn-primary" onclick="deleteGroups(event)">Confirm</button>

                                </div>

                            </div>

                        </div>

                    </div>
                </div>
            </div>
        }
        else
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="AzureADB2C" asp-controller="Account" asp-action="SignIn">Sign in</a>
                </li>
            </ul>
            <div id="page-content-wrapper">
                @RenderBody()
            </div>
        }
    }



    @RenderSection("Scripts", required: false)
</body>
</html>
<script>
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });

    function deleteGroups(e) {
        blockUi();
        var controller = $('#Controller').val();
        var action = $('#Action').val();
        var selectedGroups = []
        e.preventDefault();
        $("input:checkbox[name=selectedList]:checked").each(function () {
            selectedGroups.push($(this).val());
        });
        var groups = { 'selectedItems': selectedGroups };
        $.ajax({
            type: 'Post',
            url: `/${controller}/${action}`,
            cache: false,
            data: groups,
            traditional: true,
            success: function (res) {
                showUserMessage(res);
                confirmDelete(false);
                window.location.reload();
            }
        });
    }

    function blockUi() {
        $('.fullScreenLoader').show();
    }

    function unBlockUi() {
        $('.fullScreenLoader').hide();
        $('#user-info').fadeIn().delay(10000).fadeOut();
    }

    //$("#ajaxLoader").ajaxStart(function () {
    //    $(this).show();
    //})
    //    .ajaxStop(function () {
    //        $(this).hide();
    //    });

    $("#ajaxLoader").ajaxStart(function () {
        $("#ajaxLoader").show('fast');
    })
        .ajaxStop(function () {
            $.unblockUI();
        });

    function showUserMessage(msgObj) {
        $('#user-info').css("color", msgObj.msgColor);
        $('.user-msg-info').text(msgObj.message);
    }

</script>

