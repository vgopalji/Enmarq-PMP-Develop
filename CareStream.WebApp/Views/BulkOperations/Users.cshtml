@model List<CareStream.Models.BulkFile.Users>;
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {

        $('#bulkusertbl').DataTable({
            "language": {
                "search": "",
                "searchPlaceholder": "Search User Name",
            },
            "bLengthChange": false,
            "fixedHeader": {
                "footer": false
            }
        });

        unBlockUi();
    });
    
    function loadUserFileList() {
        blockUi();
        window.location.href = "/BulkOperations/FilesUploaded";
    }
</script>

<h1>Users</h1>


@Html.AntiForgeryToken()

<div class="container">
    <table id="bulkusertbl" class="table table-striped border">
        <thead>
            <tr>
                <th>User Principal Name</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="BulkOperations" asp-action="Users" asp-route-id="@item.Id" class="text-dark" onclick="blockUi();">

                            @Html.DisplayFor(modelItem => item.UserPrincipalName)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Action)
                    </td>
                </tr>
            }
        </tbody>
    </table>


    <div class="form-group row mb-3" style="margin-right:100px;">
        <div class="form-group row mb-3">
            <div class="col-sm-8 text-right">
                <input type="button" class="btn btn-primary text-white" value="Back" onclick="loadUserFileList();" />
            </div>
        </div>
    </div>
</div>

