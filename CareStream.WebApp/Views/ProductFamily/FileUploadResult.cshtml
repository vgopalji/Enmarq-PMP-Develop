@model List<CareStream.Models.Dealer.FileDetails>

@{
    ViewData["Title"] = "FileUploadResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Carestream</title>
    <!-- Bootstrap code & custom styles-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/style.css" rel="stylesheet" />
    <link href="~/css/offset-wizard.css" rel="stylesheet" />
    <link href="~/css/toastr.min.css" rel="stylesheet" />
    <!-- Fontawesome -->
    <script src="https://kit.fontawesome.com/e508532408.js" crossorigin="anonymous"></script>
</head>

<div id="page-content-wrapper">
    <form>
        <div id="lstgroup">
            <div class="container no-gutter border-bottom mb-4">
                <div class="row">
                    <nav class="navbar navbar-expand-lg navbar-light pt-0 pb-0">
                        <a class="navbar-brand" href="#"></a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                                aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="nav-tabs navbar-nav">

                                <li class="nav-item col-12">
                                    <a class="nav-link font-weight-bold" href="#" id="refresh">
                                        <i class="fa fa-upload" aria-hidden="true"></i> Refresh
                                    </a>
                                </li>
                                @*<li class="nav-item col-5">
                                        <a class="nav-link font-weight-bold" href="#" id="downloadgroups">
                                            <i class="fa fa-download" aria-hidden="true"></i> Download
                                        </a>
                                    </li>*@
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>

            @Html.AntiForgeryToken()
            <div class="container">
                <div class="row ">
                    <table id="example" class="table table-striped border" style="width:100%">
                        <thead>
                            <tr>
                                <th>File Name</th>
                                <th>Uploaded Time</th>
                                <th>Complete Time</th>
                                <th>Status</th>
                                <th>#Success</th>
                                <th>#Failure</th>
                                <th>Uploaded By</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FileName)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Success)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Failure)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UploadBy)
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>

        </div>

    </form>
</div>
<script type="text/javascript">

    $(document).ready(function () {

        $('#example').DataTable({
            "language": {
                "search": "",
                "searchPlaceholder": "Search File Name/Types",
            },
            "bLengthChange": false,
            "fixedHeader": {
                "footer": false
            },
        });

        $('#refresh').on('click', function () {
            window.location.reload();
        });

        unBlockUi();
    });
</script>