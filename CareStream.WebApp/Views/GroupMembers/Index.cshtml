@model CareStream.Models.GroupMemberModel

@{
    ViewData["Title"] = "Group Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-content-wrapper">
    <form method="delete" action="/GroupMembers/GroupMemberDelete">
        <div id="lstgroup">
            <div class="container no-gutter border-bottom mb-2">
                <div class="row">
                    <nav class="navbar navbar-expand-lg navbar-light bg-white pb-0 pt-0">
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="nav-tabs navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="#" id="addMember">
                                        <i class="fa fa-plus" aria-hidden="true"></i> Add Member
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" href="#" id="refresh" onclick="blockUi();">
                                        <i class="fa fa-refresh" aria-hidden="true"></i> Refresh
                                    </a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" href="#" id="removeMember" onclick="confirmDelete(true)">
                                       <i class="fa fa-trash-o" aria-hidden="true"></i> Remove Members
                                    </a>
                                </li>

                                <li class="nav-item active">
                                    <a class="nav-link" id="downloadgroups" asp-action="DownloadGroupMembers" asp-controller="GroupMembers" asp-route-id="@TempData["GroupId"]">
                                        <i class="fa fa-download" aria-hidden="true"></i> Download Members
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>

            @Html.AntiForgeryToken()
            <div class="container">
                <input type="hidden" id="txtGroupId" value="@TempData["GroupId"]" />
                <div class="row ">
                    <table id="example" class="table table-striped border" style="width:100%">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="selectedID1" /> </th>
                                <th>Name</th>
                                <th>User Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.AssignedMembers != null && Model.AssignedMembers.Count > 0)
                            {
                                foreach (var item in Model.AssignedMembers)
                                {
                                    @*<partial name="_User" model="item" />*@
                                    <tr>
                                        <td>
                                            @*<input type="checkbox"
                                                name="chkboxMember-@item.Id" id="chkboxMember-@item.Id" data-memberid="@item.Id" />*@
                                            <input type="checkbox" name="selectedList" id="selectedUser" value="@item.Id" />
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.GivenName)  @Html.DisplayFor(modelItem => item.Surname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserPrincipalName)
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </form>

    <div id="addGroupMember">
        <div class="container no-gutter border-bottom mb-2">
            <div class="row">
                <nav class="navbar navbar-expand-lg navbar-light pt-0 pb-0">
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="nav-tabs navbar-nav">
                            <li class="nav-item active col-12 mt-2 mb-2">
                                <span class="font-weight-bold">Add Members</span>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div class="container">
            <div class="row ">
                <form method="post" action="/GroupMembers/AddMember">
                    <input type="hidden" name="addMemberGroupId" id="addMemberGroupId" value="@TempData["GroupId"]" />
                    <div class="form-group row mb-3 col-sm-6">
                        @if (Model != null && Model.Members != null && Model.Members.Count > 0)
                        {
                            foreach (var item in Model.Members)
                            {
                                <ul>
                                    <input type="checkbox" name="selectedMember" id="selectedMember" value="@item.Key" />
                                    <label style="text-wrap:normal">@item.Value</label>
                                </ul>
                            }
                        }
                    </div>
                    <div class="form-group row mb-3">

                        <div class="form-group row mb-3">
                            <div class="col-sm-8 text-left">
                                <input type="submit" class="btn btn-primary text-white" value="Add Member" onclick="blockUi();">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {

        $('#addGroupMember').hide();

        $("#addMember").click(function (e) {
            e.preventDefault();
            $('#addGroupMember').show();
            $('#lstgroup').hide();
        });


        $('#example').DataTable({
            "language": {
                "search": "",
                "searchPlaceholder": "Search Members",
            },
            "bLengthChange": false,
            "fixedHeader": {
                "footer": false
            }
        });

        $('#refresh').on('click', function () {
            window.location.reload();
        });
        unBlockUi();
         if ('@(Model == null || Model.AssignedMembers == null || Model.AssignedMembers.Count <= 0)'=='True')
            toggleNoDataFound(false);
    });

    function loadGroupList() {
        blockUi();
        window.location.href = "/Group/Index";
    }

    function confirmDelete(isDelete) {
        if (isDelete) {
            $('#confirmDialog').show('fade');            
        } else {
            $('#confirmDialog').hide();
            unBlockUi();
        }
    }
</script>

