@model CareStream.Models.GroupOwnerModel

@{
    ViewData["Title"] = "Group Owner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="page-content-wrapper">
    <form method="delete" action="/GroupOwners/GroupOwnerDelete">
        <div id="lstgroup">
            <div class="container no-gutter border-bottom mb-2">
                <div class="row">
                    <nav class="navbar navbar-expand-lg navbar-light pt-0 pb-0">
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="nav-tabs navbar-nav">
                                <li class="nav-item active">
                                    <a class="nav-link" href="#" id="addOwner">
                                        <i class="fa fa-plus" aria-hidden="true"></i> Add Owner
                                        <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link " href="#" id="refresh" onclick="blockUi();">
                                        <i class="fa fa-refresh" aria-hidden="true"></i> Refresh
                                    </a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link" href="#" id="removeOwner">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i> Remove Owners
                                     </a>
                                </li>

                                <li class="nav-item active">
                                    <a class="nav-link" asp-action="DownloadGroupOwners" asp-controller="GroupOwners" asp-route-id="@TempData["GroupId"]" id="downloadgroups">
                                        <i class="fa fa-download" aria-hidden="true"></i> Download Owners
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>

            @Html.AntiForgeryToken()
            <div class="container">
                <input type="hidden" id="txtGroupId" value="@TempData["GroupId"]" />
                <div class="row ">

                    <table id="example" class="table table-striped border" style="width:100%">
                        <thead>
                            <tr>
                                <th><input type="checkbox" id="selectedID1" /> </th>
                                <th>Name</th>
                                <th>User Name</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null && Model.AssignedOwners != null && Model.AssignedOwners.Count > 0)
                            {
                                foreach (var item in Model.AssignedOwners)
                                {
                                    @*<partial name="_User" model="item" />*@
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selectedList" id="selectedUser" value="@item.Id" />
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.GivenName)  @Html.DisplayFor(modelItem => item.Surname)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserPrincipalName)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    @*
                        @foreach (var item in Model.AssignedOwners)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox"
                                        name="chkboxOwner-@item.Id" id="chkboxOwner-@item.Id" data-Ownerid="@item.Id" />
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.GivenName)  @Html.DisplayFor(modelItem => item.Surname)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserPrincipalName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Region)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserType)
                                </td>
                            </tr>
                        }
                    *@

                </div>
            </div>
        </div>
    </form>

    <div id="addGroupOwner">
        <div class="container no-gutter border-bottom mb-2">
            <div class="row">
                <nav class="navbar navbar-expand-lg navbar-light pt-0 pb-0">
                    <div class="collapse navbar-collapse" id="navbarNavDropdown">
                        <ul class="nav-tabs navbar-nav">
                            <li class="nav-item active">
                                <span class="font-weight-bold">Add Owners</span>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>

        <div class="container">
            <div class="row ">
                <form method="post" action="/GroupOwners/AddOwner">
                    <input type="hidden" name="addOwnerGroupId" id="addOwnerGroupId" value="@TempData["GroupId"]" />
                    <div class="form-group row mb-3 col-sm-6">
                        @if (Model != null && Model.Owners != null && Model.Owners.Count > 0)
                        {
                            foreach (var item in Model.Owners)
                            {
                                <ul>
                                    <input type="checkbox" name="selectedOwner" id="selectedOwner" value="@item.Key" />
                                    <label style="text-wrap:normal">@item.Value</label>
                                </ul>

                            }
                        }
                    </div>
                    <div class="form-group row mb-3">

                        <div class="form-group row mb-3">
                            <div class="col-sm-8 text-left">
                                <input type="submit" class="btn btn-primary text-white" value="Add Owner" onclick="blockUi();">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        $('#addGroupOwner').hide();

        $("#addOwner").click(function (e) {
            e.preventDefault();
            $('#addGroupOwner').show();
            $('#lstgroup').hide();
        });


        $('#example').DataTable({
            "language": {
                "search": "",
                "searchPlaceholder": "Search Owners",
            },
            "bLengthChange": false,
            "fixedHeader": {
                "footer": false
            }
        });

        $('#refresh').on('click', function () {
            window.location.reload();
        });
        unBlockUi();

         if ('@(Model == null || Model.AssignedOwners == null || Model.AssignedOwners.Count <= 0)'=='True')
            toggleNoDataFound(false);
    });

    function loadGroupList() {
        blockUi();
        window.location.href = "/Group/Index";
    }
</script>